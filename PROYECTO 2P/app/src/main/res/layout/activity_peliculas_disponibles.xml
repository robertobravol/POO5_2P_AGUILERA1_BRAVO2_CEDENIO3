<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TvFuncion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeliculaDisponibleActivity">



    <LinearLayout
        android:id="@+id/peliculasLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@color/off_white">

        <ImageView
            android:id="@+id/idCinepolis"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            app:srcCompat="@drawable/butacas" />

        <TextView
            android:id="@+id/idPeliculas"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/idPeliculas"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/ScrollPeliculas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/PostersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp" >

                <ImageView
                    android:id="@+id/idDeadpool"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/deadpoolandwolverine" />

                <ImageView
                    android:id="@+id/idCapitan"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/capamerica" />

                <ImageView
                    android:id="@+id/idAvatar"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/avatar" />

                <ImageView
                    android:id="@+id/idDune"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/dune" />

                <ImageView
                    android:id="@+id/idGodzilla"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/godzilla" />

                <ImageView
                    android:id="@+id/idInsideOut"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/insideout2" />

                <ImageView
                    android:id="@+id/idJuegos"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/juegoshambre" />

                <ImageView
                    android:id="@+id/idWicked"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/wicked" />

                <ImageView
                    android:id="@+id/idReino"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/reinoluna" />

                <ImageView
                    android:id="@+id/idMision"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:clickable="true"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/misionimposible" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>